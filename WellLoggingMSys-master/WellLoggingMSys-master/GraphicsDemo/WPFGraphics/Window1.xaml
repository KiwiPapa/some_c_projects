			<Line x:Name="Line10" Height="304" Width="480" Y2="{Binding ActualHeight, ElementName=Line10}" X1="400" X2="{Binding X1, ElementName=Line10}" Stroke="Red"></Line>
			<Polyline x:Name="PL_LIne" Stroke="Black" Height="304" Width="480"></Polyline>
    	</Canvas>
    	<Button x:Name="BTN_sTART" Content="Button" HorizontalAlignment="Right" Margin="0,0,149,18.163" VerticalAlignment="Bottom" Width="75"/>
    	<Slider x:Name="SL_mAIN" Margin="32,0,72,26" VerticalAlignment="Bottom"/>
        
    </Grid>
</Window>
