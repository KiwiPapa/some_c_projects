			<Line x:Name="Line4" Height="304" Width="480" Y2="{Binding ActualHeight, ElementName=Line4}" X1="120" X2="{Binding X1, ElementName=Line4}" Stroke="Red"></Line>
			<Line x:Name="Line5" Height="304" Width="480" Y2="{Binding ActualHeight, ElementName=Line5}" X1="160" X2="{Binding X1, ElementName=Line5}" Stroke="Red"></Line>
